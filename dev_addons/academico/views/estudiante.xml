<odoo>
    <data>
        
        <record id="view_estudiante_form" model="ir.ui.view">
            <field name="name">academico estudiante form</field>
            <field name="model">academico.estudiante</field>
            <field name="arch" type="xml">
                <form string="Estudiante">
                    <group>
                        <field name="name"/>
                        <field name="Apaterno"/>
                        <field name="Amaterno"/>
                        <field name="edad"/>
                        <field name="curso_id"/>
                        <field name="nivel_id"/>
                        
                        <field name="horario_ids" readonly="1">
                            <tree string="Horarios">
                                <field name="materia_id"/>
                                <field name="aula_id"/>
                                <field name="dia_semana"/>
                                <field name="hora_inicio"/>
                                <field name="hora_fin"/>
                            </tree>
                            <form string="Horario">
                                <group>
                                    <field name="materia_id"/>
                                    <field name="aula_id"/>
                                </group>
                                <group>
                                    <field name="dia_semana"/>
                                    <field name="hora_inicio"/>
                                    <field name="hora_fin"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </form>
            </field>
        </record>
      
      <record id="view_estudiante_tree" model="ir.ui.view">
        <field name="name">academico estudiante list</field>
        <field name="model">academico.estudiante</field>
        <field name="arch" type="xml">
            <tree string="Estudiante">
                <field name="name"/>
                <field name="Apaterno"/>
                <field name="Amaterno"/>
                <field name="edad"/>
                <field name="curso_id"/>
                <field name="nivel_id"/>
                <field name="horario_ids"/>
               
            </tree>
        </field>
      </record>

      <record model="ir.actions.act_window" id="academico.action_estudiante_window">
        <field name="name">academico estudiante window</field>
        <field name="res_model">academico.estudiante</field>
        <field name="view_mode">tree,form</field>
      </record>
      
      <menuitem name="Estudiantes" id="academico.menu_1_estudiante_list" parent="academico.menu_1"
      action="academico.action_estudiante_window"/>
    </data>
</odoo>