<odoo>

    <data>
        <record id="view_turno_form" model="ir.ui.view">
            <field name="name">academico turno form</field>
            <field name="model">academico.turno</field>
            <field name="arch" type="xml">
                <form string="Turno">
                    <sheet>
                        <group>
                            <field name="name"/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="view_turno_tree" model="ir.ui.view">
            <field name="name">academico turno list</field>
            <field name="model">academico.turno</field>
            <field name="arch" type="xml">
                <tree string="Truno">
                    <field name="name"/>
                   
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="academico.action_turno_window">
            <field name="name">academico turno window</field>
            <field name="res_model">academico.turno</field>
            <field name="view_mode">tree,form</field>
          </record>
          <menuitem name="Turno" id="academico.menu_1_turno_list" parent="academico.menu_1"
          action="academico.action_turno_window"/>
    </data>
</odoo>